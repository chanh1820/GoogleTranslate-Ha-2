<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.googletranslate.view.dichngonngu.DichNgonNguActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mời bạn nhập nội dung:"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edt_dich_ngon_ngu_input_word"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/style_edt_text_1"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ:"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spn_dich_ngon_ngu_choose_language"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/style_spinner"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả:"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edt_dich_ngon_ngu_result"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/style_edt_text_1"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:textSize="24sp" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Dịch"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:id="@+id/btn_dich_ngon_ngu_tranlate"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:drawableRight="@drawable/baseline_translate_24"/>
</LinearLayout>