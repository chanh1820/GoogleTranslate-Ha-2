<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="vertical"
    tools:context=".view.trochoi.viet.VietActivity">
    <LinearLayout
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/style_radius_trang_sang"
        android:orientation="vertical">
        <TextView
            android:text="  Viết"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_draw_24"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Định nghĩa"
            android:textSize="18sp"
            android:textColor="#756565"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginVertical="8dp"
            android:textSize="24sp"
            android:id="@+id/tv_viet_example_viet"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="(n): chăm sóc trẻ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Bỏ qua"
            android:id="@+id/tv_viet_ignore"
            android:textSize="18sp"
            android:textColor="#ECBD77"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_viet_image"
        android:layout_width="320dp"
        android:layout_height="190dp"
        android:layout_margin="16dp"
        android:src="@drawable/image_1" />
        <TextView
            android:text="Đáp án: extended family"
            android:textColor="@color/black"
            android:id="@+id/tv_viet_result"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
        android:drawablePadding="60dp"
            android:drawableRight="@drawable/ic_baseline_volume_up_24"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:text="Chính xác"
        android:id="@+id/tv_viet_notify"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:layout_marginHorizontal="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingLeft="12dp"
            android:id="@+id/edt_viet_input"
            android:hint="type answer ..."
            android:layout_weight="9"
            android:background="@drawable/style_radio_button_1"/>
        <TextView
            android:layout_marginHorizontal="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:background="@drawable/style_radius_4"
            android:layout_weight="1"
            android:text="Kiểm tra"
            android:id="@+id/btn_viet_check"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>
    </LinearLayout>

    <Button
        android:background="@drawable/style_radius_4"
        android:layout_width="wrap_content"
        android:text="Câu tiếp theo"
        android:id="@+id/btn_viet_next"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"
        android:layout_height="wrap_content"/>
</LinearLayout>