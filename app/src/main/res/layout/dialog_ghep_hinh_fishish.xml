<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/style_radio_button_1"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#C9FF3C3C"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvTimeOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kết quả"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:id="@+id/tv_dialog_ghep_hinh_content"
            android:text="Chúc mừng bạn đã hoàn thành xuất sắc"
            android:textColor="@color/green"
            android:textSize="28sp" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_dialog_ghep_hinh_exit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/style_radius_5"
                android:drawableLeft="@drawable/baseline_arrow_left_24"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Thoát   "
                android:textAllCaps="false"
                android:textColor="@color/trang_mo"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>