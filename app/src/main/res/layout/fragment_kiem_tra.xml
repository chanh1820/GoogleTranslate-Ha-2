<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mau_xam"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Định nghĩa"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_kiemtra_example_viet"
                android:text="(v): giữ cho phòng của tôi sạch sẽ, ngăn nắp"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:maxWidth="200dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/imv_kiemtra_example"
                android:src="@drawable/image_1"
                android:scaleType="fitXY"
                android:layout_width="180dp"
                android:layout_height="110dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"        android:layout_marginVertical="16dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mau_xam"
            android:textSize="20sp"
            android:id="@+id/tv_kiemtra_sound"
            android:drawableRight="@drawable/ic_baseline_volume_up_24"
            android:textStyle="bold"
            android:text="Thuật ngữ    "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="nuclear family"
                android:id="@+id/tv_kiemtra_example_eng"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:maxWidth="200dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mau_xam"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Chọn câu trả lời"/>
        <RadioGroup
            android:id="@+id/radGroup"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp">

            <RadioButton
                android:id="@+id/radA"
                android:padding="8dp"
                android:textColor="@color/xanh_nuoc_bien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:background="@drawable/custom_radio_button"
                android:checked="false"
                android:button="@drawable/custom_radio_button"
                android:text=" Đúng"

                android:textSize="28sp"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/radB"
                android:padding="8dp"
                android:background="@drawable/custom_radio_button"
                android:button="@drawable/custom_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:checked="false"
                android:text=" Sai"
                android:paddingLeft="20dp"
                android:textColor="@color/xanh_nuoc_bien"
                android:textSize="28sp"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>


</LinearLayout>