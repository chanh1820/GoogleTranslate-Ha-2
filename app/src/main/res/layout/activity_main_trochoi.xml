<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    tools:context=".view.main.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imv_settings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_baseline_settings_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="4dp">
        <TextClock
            android:text="Thu 12:12:02 00:00:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/textclock"
            android:layout_gravity="center_horizontal"
            android:format24Hour="E, d-M-yyyy k:m:sa"
            android:format12Hour="k:m:sa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="152dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="30dp">

            <Button
                android:id="@+id/btn_the_ghi_nho"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_baseline_psychology_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:text=" Thẻ ghi nhớ"/>
            <Button
                android:id="@+id/btn_hoc"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="left|center_vertical"
                android:layout_marginVertical="4dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_baseline_psychology_alt_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:textStyle="bold"
                android:text="  Học"/>
            <Button
                android:backgroundTint="@android:color/holo_orange_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/btn_viet"
                android:layout_marginVertical="4dp"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/ic_baseline_border_color_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="  Viết"/>
            <Button
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/btn_kiem_tra"
                android:layout_marginVertical="4dp"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/ic_baseline_border_color_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="  Kiểm tra"/>
            <Button
                android:backgroundTint="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/btn_chinh_ta"
                android:layout_marginVertical="4dp"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/ic_baseline_border_color_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="  Chính tả"/>
            <Button
                android:backgroundTint="@android:color/holo_blue_bright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/btn_ghep_the"
                android:layout_marginVertical="4dp"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/ic_baseline_border_color_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="  Ghép the"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </LinearLayout>


    </LinearLayout>
</LinearLayout>