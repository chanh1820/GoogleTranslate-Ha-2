<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.doctienganh.DocNgonNguActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập nội dung cần đọc"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="start"
        android:id="@+id/edt_doc_ngon_ngu_input"
        android:padding="8dp"
        android:hint="Nhập vào đoạn văn bạn muốn đọc ..."
        android:layout_margin="8dp"
        android:text=""
        android:background="@drawable/style_edt_text_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spn_doc_ngon_ngu_choose_language"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:gravity="center"

            android:background="@drawable/style_spinner"
            android:dropDownVerticalOffset="40dp" />
        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btn_doc_ngon_ngu_speech"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:drawableRight="@drawable/baseline_record_voice_over_24"
            android:gravity="center"
            android:text="Đọc"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>