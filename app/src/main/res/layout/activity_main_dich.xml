<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/stylde_gadient_1"
    tools:context="com.example.googletranslate.view.main.dich.MainDichActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="152dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="30dp">
            <Button
                android:id="@+id/btn_dich_ngon_ngu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:drawableLeft="@drawable/ic_translate"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:gravity="left|center_vertical"
                android:text="Dịch ngôn ngữ"                android:padding="12dp"

                android:paddingVertical="8dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_dich_nhieu_ngon_ngu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:paddingVertical="8dp"                android:padding="12dp"

                android:backgroundTint="@android:color/holo_green_light"
                android:drawableLeft="@drawable/ic_translate_muti_language"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:gravity="left|center_vertical"
                android:text="Dịch nhiều ngôn ngữ"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


        </LinearLayout>


    </LinearLayout>
</LinearLayout>