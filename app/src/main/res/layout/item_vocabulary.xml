<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:id="@+id/ln_item_vocabulary_parent"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/style_radius_3">
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/style_line"/>
    <TextView
        android:layout_width="match_parent"
        android:text="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:id="@+id/tv_item_vocabulary_stt"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_vocabulary_eng"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="extended family"
                android:textColor="@color/holo_blue_10"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_item_vocabulary_spell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ɪkˈstendɪd ˈfæməli/"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_vocabulary_viet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(n): đại gia đình"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_vocabulary_example_anh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sam is part of an extended family."
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_item_vocabulary_example_viet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Sam là một thành viên của đại gia đình.)"
                android:textColor="#656565"
                android:textSize="20sp"
                android:textStyle="italic" />
            <ImageView
                android:id="@+id/img_item_vocabulary_image"
                android:layout_width="280dp"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                android:layout_margin="16dp"
                android:src="@drawable/image_1" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>